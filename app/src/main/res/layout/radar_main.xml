    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <ca.datamagic.noaa.widget.RadarView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/radarView" />
